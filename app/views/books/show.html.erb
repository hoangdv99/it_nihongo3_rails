<p id="notice"><%= notice %></p>
<h1>本</h1>
<p>
  <strong>タイトル:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>ページ数:</strong>
  <%= @book.number_of_pages %>
</p>

<p>
  <strong>Detail:</strong>
  <%= @book.detail %>
</p>

<div style="widht:200px;height:auto;">
  <p><strong>カバー:</strong>　</p>
　<% if @book.image.attached? %>
    <%= image_tag @book.image, class: "card-img",style:"widht:100%!important" %>
  <% end %>
</div>

<h2>Review From</h2>
 <%= form_with(model: @book_review, local: true) do |form| %>
   <div class= "field">
     <%= form.text_area :review %>
     <%= form.hidden_field :book_id, :value => @book.id %>
   </div>
   <div class="actions">
     <%= form.submit %>
   </div>
 <% end %>

<%= link_to 'Edit', edit_book_path(@book) %> |
